
.rightView{
  float: right;
  margin: 10px 0;
  padding: 10px 18px;
  background:rgba(231,244,255,1);
  box-shadow:0px 2px 4px 0px rgba(219,235,249,0.51);
  font-size:13px;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(48,49,51,1);
  line-height:18px;
  border-radius:5px ;
  border:1px solid rgba(213,226,254,1);
  max-width: calc(96vw - 120px);
  overflow:hidden;
  word-wrap:break-word;
  text-align: justify;
}

.recordingView{
  float: right;
  margin: 10px 0;
  padding: 16px 20px;
  box-sizing: border-box;
  background:rgba(231,244,255,1);
  width: 62px;
  height: 40px;
  border-radius: 5px ;
}

.recordView{
  position: absolute;
  bottom: 50px;
  right: 15px;
}
.query {
  justify-content: flex-end;
  display: flex;
  align-items: flex-start;
}
.queryimage {
  width: 38px;
  height: 38px;
}
.queryimageview{
  width: 38px;
  height: 38px;
  margin-left: 10px;
  margin-top: 10px;
  border-radius: 50%;
  overflow: hidden
}

