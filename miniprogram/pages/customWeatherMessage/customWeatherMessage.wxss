.answer{
  float: left;
  margin: 10px 0;
  padding: 13px 20px;
  background-color: red;
  color: #ffffff;
  border-radius: 24px;
  border-top-left-radius: 2px;
  font-size: 16px;
  line-height: 22px;
  overflow:hidden; word-wrap:break-word;
  text-align: justify;
  box-shadow:0px 2px 4px rgba(212,212,212,0.5);
}
.text::after{
  width: 100%;
  display: inline-block;
  content: '';
}
.weather-view{
  margin-top: 10px;
  width: 100%;
  height: 193px;
  background-color: #ffffff;
  border-radius: 10px;
}
.top-view{
  width: 100%;
  height: 96px;
  display: flex;
}
.left-view{
  margin-left: 25px;
  width: 50px;
  height: 100%;
  display: flex;
}
.nowTp-txt{
  width: 100%;
  line-height: 96px;
  font-size: 42px;
  font-family:DINAlternate-Bold;
  font-weight:bold;
}
.nowTp-char-txt{
  margin-top: 30px;
  width: 10px;
  font-size: 20px;
  line-height: 20px;
}
.midd-view{
  margin-left: 10px;
  width: 40px;
  height: 100%;
}
.weather-icon{
  margin-top: 28px;
  margin-left: 10px;
  width: 20px;
  height: 20px;
}
.weather-iconImg{
  width: 20px;
  height: 20px;
}
.weather-txt{
  margin-top: 6px;
  width: 40px;
  line-height: 14px;
  font-size: 14px;
  font-family: SFProDisplay-Semibold;
  font-weight: 600;
  color:rgba(102,102,102,1);
  text-align: center;
}
.right-view{
  margin-left: 20px;
  width: calc(100% - 170px);
  height: 100%;
}
.date-time{
  margin-top: 28px;
  width: 100%;
  line-height: 14px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color:rgba(102,102,102,1);
}
.temperature-txt{
  margin-top: 12px;
  width: 100%;
  line-height: 14px;
  font-size: 14px;
  font-family: SFProDisplay-Semibold;
  font-weight: 600;
  color:rgba(51,51,51,1);
}
.bottom-view{
  display: flex;
  width: 100%;
  height: 96px;
  box-sizing: border-box;
  /* padding: 0px 25px; */
}
.other-weather{
  width: 25%;
  height: 100%;
}
.other-time{
  width: 100%;
  line-height: 13px;
  text-align: center;
  font-size: 13px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  opacity:0.5;
}
.other-weather-txt{
  margin-top: 7px;
  width: 100%;
  line-height: 14px;
  text-align: center;
  font-size: 14px;
  font-family: SFProDisplay-Semibold;
  font-weight: 600;
  color:rgba(51,51,51,1);
}
.other-icon{
  margin-top: 8px;
  width: 100%;
  height: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other-weather-icon{
  width: 16px;
  height: 16px;
}
.other-temperature{
  margin-top: 10px;
  width: 100%;
  line-height: 13px;
  text-align: center;
  font-size: 13px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  opacity:0.9;
}

