.welcome {
  margin: 10px 0;
  padding: 13px 20px;
  background-color: #fff;
  color: #000;
  border-radius: 24px;
  border-top-left-radius: 2px;
  max-width: calc(96vw - 120px);
  font-size: 16px;
  line-height: 22px;
  overflow:hidden; word-wrap:break-word;
  text-align: justify;
  box-shadow:0px 2px 4px rgba(212,212,212,0.5);
}
.scroll-wrap{
  height: calc(100% - 185px);
  width: 100vw;
  overflow: hidden;
}
.unit-view{
  padding: 0 20px;
  width: 100%;
  box-sizing: border-box;
}
