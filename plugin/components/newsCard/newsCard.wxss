.answer{
  float: left;
  margin: 10px 0;
  padding: 13px 20px;
  background-color: #fff;
  color: #000;
  border-radius: 24px;
  border-top-left-radius: 2px;
  font-size: 16px;
  line-height: 22px;
  overflow:hidden; word-wrap:break-word;
  text-align: justify;
  box-shadow:0px 2px 4px rgba(212,212,212,0.5);
}
.text::after{
  width: 100%;
  display: inline-block;
  content: '';
}
.scroll-wrap{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 11px;
}

.newsImg{
  border-top-left-radius: 11px;
  border-top-right-radius: 11px;
}

.news-sliderBg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 30px;
  background: linear-gradient(rgba(0, 0, 0, 0.05), rgba(0, 0, 0, 0.8));
}

.news-slider{
  position: absolute;
  bottom: 0;
  left: 0px;
  width: 100%;
}

.news-Time{
  position: absolute;
  bottom: 5px;
  right: 5px;
  line-height: 20px;
  text-align: right;
  font-size: 13px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color:#fff;
}

.newsTitle{
  margin-top: 10px;
  width: 100%;
  padding: 0px 15px;
  box-sizing: border-box;
  font-size: 19px;
  font-family:PingFangSC-Medium;
  font-weight:700;
  color:rgba(51,51,51,1);
  line-height: 25px;
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
  text-align: justify;
}

.text::after{
  width: 100%;
  display: inline-block;
  content: '';
}
.newsContent{
  margin-top: 6px;
  width: 100%;
  padding: 0px 15px;
  box-sizing: border-box;
  font-size: 15px;
  line-height: 23px;
  font-family:PingFangSC-Regular;
  font-weight: 400;
  color:rgba(96,98,102,1);
  text-align: justify;
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5; 
}
.newsSrcfrom{
  float: left;
  margin-top: 10px;
  text-align: left;
  font-size: 13px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(188,188,188,1);
  line-height: 19px;
}
.newsSrcfromTime{
  float: left;
  margin-left: 20px;
  margin-top: 10px;
  text-align: left;
  font-size: 13px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(188,188,188,1);
  line-height: 19px;
}
.newsFrom-btn{
  float: right;
  margin: 5px 0;
  padding: 5px 12px;
  background-color: #fff;
  border-radius: 15px;
  max-width: calc(96vw - 120px);
  height: 20px;
  display: flex;
}
.news-logo{
  width: 20px;
  height: 20px;
  border-radius: 20px;
}
.news-name{
  margin-left: 10px;
  line-height: 20px;
  font-size: 13px;
}
